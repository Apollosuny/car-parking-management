


<div class="p-4 sm:ml-64">
  <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700 mt-14">
    <div class="flex items-center justify-between flex-wrap mb-6">
      <h1 class="text-3xl font-bold">Payment_types</h1>
  
      <%= link_to new_payment_type_path, class: button_class(theme: "primary") do %>
      Add New Payment type
      <% end %>
    </div>
  
    <table class="table-auto border-collapse border-slate-400 w-full">
      <thead class="bg-slate-50 dark:bg-slate-700">
        <tr>
          
            <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Name</th>
          
                    <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Description</th>
                    <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Code</th>
                    <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Active</th>
                  
        </tr>
      </thead>
  
      <tbody>
        <% @payment_types.each do |payment_type| %>
        <%= content_tag :tr, id: dom_id(payment_type), class: dom_class(payment_type) do %>
        
          <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= link_to payment_type.name, payment_type %></td>
        
  
                <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= payment_type.description %></td>
                <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= payment_type.code %></td>
                <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= payment_type.active %></td>
        
        
        <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>
</div>
