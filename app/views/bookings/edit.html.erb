<div class="p-4 sm:ml-64">
  <div class="p-4 dark:border-gray-700 mt-14">
    <div class="flex items-center justify-between mb-6 flex-wrap">
      <h1 class="font-bold text-3xl mb-6">Edit booking</h1>
      <% if @booking.persisted? %>
      <%= button_to 'Destroy', @booking, method: :delete, class: "text-red-700 underline", data: { turbo_confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  
    <%= render 'form', booking: @booking %>
  </div>
</div>
