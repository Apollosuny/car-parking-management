<div class="p-4 sm:ml-64">
  <div class="p-4 dark:border-gray-700 mt-14">
    <div class="flex items-center justify-between">
      <h1 class="flex-1 font-bold text-3xl">Payment_type</h1>
  
      <div class="flex-wrap lg:flex items-center lg:space-x-3">
        <%= link_to payment_types_path, class: button_class(theme: "transparent") do %>
        All Payment_types
        <% end %>
        <%= link_to edit_payment_type_path(@payment_type), class: button_class(theme:"primary") do %>
        Edit
        <% end %>
      </div>
    </div>
  
    <ul class="text-slate-700">
        <li>
          <p class="font-semibold">Name:</p>
          <p><%= @payment_type.name %></p>
        </li>
        <li>
          <p class="font-semibold">Description:</p>
          <p><%= @payment_type.description %></p>
        </li>
        <li>
          <p class="font-semibold">Code:</p>
          <p><%= @payment_type.code %></p>
        </li>
        <li>
          <p class="font-semibold">Active:</p>
          <p><%= @payment_type.active %></p>
        </li>
    </ul>
  </div>
</div>
