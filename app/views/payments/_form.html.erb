<%= form_with(model: payment) do |form| %>
<% if payment.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% payment.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
    <%= form.label 'Total Time', class: label_class %>
    <%= form.text_field :totalTime, disabled: true, class: input_class %>
  </div>
  <div class="mb-6">
    <%= form.label 'Payment type', class: label_class %>
    <%= form.collection_select :payment_type_id, @payment_types, :id, :name, { prompt: "Select a type" }, class: input_class %>
  </div>
  <div class="mb-6">
    <%= form.label :note, class: label_class %>
    <%= form.text_area :note, class: input_class %>
  </div>

<% if payment.payment_type_id.blank? %>
<div class="flex justify-end items-center gap-4 md:py-5 rounded-b dark:border-gray-600">
    <button @click="open = false" type="button" class="w-32 py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">Decline</button>
    <button 
      @click="open = false" 
      type="submit" 
      class="w-32 text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
    >
      Submit
    </button>
</div>
<% end %>

<% end %>
