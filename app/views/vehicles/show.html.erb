<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Vehicle</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to vehicles_path, class: button_class(theme: "transparent") do %>
      All Vehicles
      <% end %>
      <%= link_to edit_vehicle_path(@vehicle), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Vehicle model:</p>
        <p><%= @vehicle.vehicle_model %></p>
      </li>
      <li>
        <p class="font-semibold">User:</p>
        <p><%= @vehicle.user %></p>
      </li>
      <li>
        <p class="font-semibold">Vehicleregistrationplate:</p>
        <p><%= @vehicle.vehicleRegistrationPlate %></p>
      </li>
      <li>
        <p class="font-semibold">Description:</p>
        <p><%= @vehicle.description %></p>
      </li>
      <li>
        <p class="font-semibold">Status:</p>
        <p><%= @vehicle.status %></p>
      </li>
  </ul>
</div>
