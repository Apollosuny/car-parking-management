        <%= form.label :description, class: label_class %>
          <%= form.text_area :description, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :code, class: label_class %>
          <%= form.text_field :code, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :active, class: label_class %>
          <%= form.check_box :active, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if payment_type.persisted? %>
<%= link_to "Cancel", payment_type, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", payment_types_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
