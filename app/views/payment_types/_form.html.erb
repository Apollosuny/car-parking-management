<%= form_with(model: payment_type) do |form| %>
<% if payment_type.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(payment_type.errors.count, "error") %> prohibited this payment_type from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% payment_type.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :name, class: label_class %>
          <%= form.text_field :name, class: input_class %>
      </div>
