<%= form_with(model: vehicle) do |form| %>
<% if vehicle.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% vehicle.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :vehicle_model_id, class: label_class %>
          <%= form.text_field :vehicle_model_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :user_id, class: label_class %>
          <%= form.text_field :user_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :vehicleRegistrationPlate, class: label_class %>
          <%= form.text_field :vehicleRegistrationPlate, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :description, class: label_class %>
          <%= form.text_area :description, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :status, class: label_class %>
          <%= form.check_box :status, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if vehicle.persisted? %>
<%= link_to "Cancel", vehicle, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", vehicles_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
