<div class="grid grid-cols-2">
    <div id="chart-container"></div>
    <div id="monthly_revenue"></div>
</div>

<script>
    $(document).ready(function() {
      $.ajax({
        url: '/api/booked_per_day',
        method: 'GET',
        dataType: 'json',
        success: function(data) {
          // Render the chart using ApexCharts
          var options = {
            chart: {
                type: 'area',
                zoom: {
                    enabled: false
                }
            },
            series: [{
                name: 'Bookings',
                data: data.map(d => d.count)
            }],
            xaxis: {
                categories: data.map(d => d.date)
            }
            };

          var chart = new ApexCharts(document.querySelector("#chart-container"), options);
          chart.render();
        }
      });
    });

    $(document).ready(function() {
      $.ajax({
        url: '/api/monthly_revenue',
        method: 'GET',
        dataType: 'json',
        success: function(data) {
          // Render the chart using ApexCharts
          var options = {
            chart: {
              type: 'area',
              zoom: {
                enabled: false
              }
            },
            series: [
              {
                name: '<%= Date.today.year %>',
                data: data.current_year.map(d => d.revenue)
              },
              {
                name: '<%= Date.today.year - 1 %>',
                data: data.previous_year.map(d => d.revenue)
              }
            ],
            xaxis: {
              categories: data.current_year.map(d => d.month)
            }
          };

          var chart = new ApexCharts(document.querySelector("#monthly_revenue"), options);
          chart.render();
        }
      });
    });
</script>